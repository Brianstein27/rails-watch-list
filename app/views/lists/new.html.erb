<div
  class="d-flex mb-4"
  lc-helper="background"
  style="background:url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D) center / cover no-repeat; height: 500px; background-color:#444; background-blend-mode: overlay;"
>
  <div class="align-self-center text-center text-light col-md-8 offset-md-2">
    <div class="lc-block mb-4">
      <div editable="rich">
        <h1 class="display-1 text-decoration-none text-light fw-bolder">Add a list</h1>
      </div>
    </div>
        <%= link_to "Home",
        lists_path,
        class: "btn btn-secondary text-decoration-none text-light fw-bolder" %>
      </div>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <div class="card p-4 m-4 shadow-lg">
<%= simple_form_for @list do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <div class="btn btn-primary">
  <%= f.button :submit, class: "text-light fw-bold" %>
  </div>
  </div>
<% end %>
</div>
